\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{resume}[Templete for resume]

% Settings for no hyphenation
\tolerance=1
\emergencystretch=\maxdimen
\hyphenpenalty=10000
\hbadness=10000

\newcommand{\@resumeSytle}{normal}
\newcommand{\resumeStyle}[1]{
  \renewcommand{\@resumeSytle}{#1}
  \ifthenelse{\NOT\equal{\@resumeSytle}{fancy}}{\renewcommand{\module}[1]{\section{##1}}}{}
}
% input command for name
\newcommand{\name}[1]{\author{#1}}
% input command for phone
\newcommand{\@phone}{}
\newcommand{\phone}[1]{\renewcommand{\@phone}{#1}}
% input command for Email
\newcommand{\@email}{}
\newcommand{\email}[1]{\renewcommand{\@email}{#1}}
% input command for address
\newcommand{\@address}{}
\newcommand{\address}[1]{\renewcommand{\@address}{#1}}
%----------------------------------------------------------------------------%
% redefine maketitle
\renewcommand\maketitle{
  \vspace*{-8mm} % '*' for adjust vertical space at the start of a page
  \begin{center}
    {\LARGE\textbf{\@author}}\\[0.25em]
    \ifthenelse{\NOT\equal{\@resumeSytle}{normal}}{\faIcon[regular]{phone-square-alt}}{Phone:}~\href{tel:\@phone}{\@phone}~|~
    \ifthenelse{\NOT\equal{\@resumeSytle}{normal}}{\faIcon[regular]{envelope}}{Email:}~\href{mailto:\@email}{\@email}\\
    \ifthenelse{\NOT\equal{\@resumeSytle}{normal}}{\faIcon[solid]{home}}{Address:}~\@address
  \end{center}
  \thispagestyle{fancy}
  \vspace{-5mm}
}
% Icon for Phone: \faIcon[regular]{phone-square-alt}
% Icon for Email: \faIcon[regular]{envelope}
% Icon for Address: \faIcon[solid]{home}
